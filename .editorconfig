root = true

[*]
charset = utf-8
continuation_indent_size = 4
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

end_of_line = lf
max_line_length = 170

[*.md]
trim_trailing_whitespace = false

[*.{cmd,bat}]
end_of_line = crlf

[*.{yml,yaml,avsc}]
indent_size = 2
continuation_indent_size = 2
